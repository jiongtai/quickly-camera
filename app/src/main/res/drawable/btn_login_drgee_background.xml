<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 当状态为选中时 -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 背景图片 -->
            <item android:drawable="@drawable/login_icon_yes_select" />
            <!-- 圆角遮罩层 -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="14dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 默认状态 -->
    <item android:state_checked="false">
        <layer-list>
            <!-- 背景图片 -->
            <item android:drawable="@drawable/login_icon_no_select" />
            <!-- 圆角遮罩层 -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="14dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
