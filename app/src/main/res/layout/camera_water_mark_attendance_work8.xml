<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/camera_1_1_background"
    android:orientation="vertical"
    android:padding="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coons_work8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="64dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/water_attendance_attendance4_record"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="48dp"
            android:layout_height="19dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.84">

            <TextView
                android:id="@+id/tv_work8_1"
                android:textStyle="bold"
                android:text="19:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_water_attendance_attendance2_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.10.24  星期日"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_water_attendance_attendance2_tv4"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:text="广州市番禺区南村新塘社区大道386号"
        android:textColor="@color/white"
        android:textSize="13sp" />

</LinearLayout>














