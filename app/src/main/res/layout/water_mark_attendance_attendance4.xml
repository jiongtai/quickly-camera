    </LinearLayout>


    <TextView
        android:id="@+id/tv_water_attendance_attendance2_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.10.24  星期日"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_water_attendance_attendance2_tv4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="广州市番禺区南村新塘社区大道386号"
        android:textColor="@color/white"
