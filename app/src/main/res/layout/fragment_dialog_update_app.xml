<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/update_app_background"
        android:layout_width="332dp"
        android:layout_height="432dp"
        android:src="@drawable/update_app_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="180dp"
        android:text="新版本抢先体验"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/update_app_background"
        app:layout_constraintTop_toTopOf="@+id/update_app_background" />

    <ImageView
        android:id="@+id/update_app_tip"
        android:layout_width="52dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="188dp"
        android:adjustViewBounds="true"
        android:src="@drawable/update_app_tip"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/update_app_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="·"
        app:layout_constraintBottom_toBottomOf="@+id/update_app_background"
        app:layout_constraintEnd_toEndOf="@+id/update_app_background"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="@+id/update_app_background"
        app:layout_constraintTop_toTopOf="@+id/update_app_background"
        app:layout_constraintVertical_bias="0.559" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全新版本等你来玩!  !  !"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/update_app_background"
        app:layout_constraintEnd_toEndOf="@+id/update_app_background"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="@+id/update_app_background"
        app:layout_constraintTop_toTopOf="@+id/update_app_background"
        app:layout_constraintVertical_bias="0.783" />

    <ImageView
        android:id="@+id/update_app_x"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/update_app_disagree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_app_background"
        app:layout_constraintVertical_bias="0.058" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_app_disAgree"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/update_btn_disagree"
        android:text="稍后再说"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/update_app_background"
        app:layout_constraintStart_toStartOf="@+id/update_app_background" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_app_agree"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/update_btn_agree"
        android:text="立即更新"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/update_app_background"
        app:layout_constraintEnd_toEndOf="@+id/update_app_background" />




</androidx.constraintlayout.widget.ConstraintLayout>







