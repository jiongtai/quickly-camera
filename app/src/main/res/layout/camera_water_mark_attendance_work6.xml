<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/camera_1_1_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/water_attendance_hengxian1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/water_attendance_attendance1_gou" />

        <TextView
            android:id="@+id/tv_water_attendance_attendance2_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:text="打卡"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_water_attendance_attendance2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:text="12:55"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/water_attendance_hengxian1" />

    <TextView
        android:id="@+id/tv_water_attendance_attendance2_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/d4"
        android:text="2020/04/07  星期三"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_water_attendance_attendance2_tv4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/d4"
        android:text="广州市，天河区,珠江新城"
        android:textColor="@color/white" />


</LinearLayout>


