<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="110dp"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:background="@color/black">

    <!-- 上班4水印 -->


    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/water_attendance_hengxian1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/water_attendance_attendance1_gou" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_water_attendance_attendance2_tv1"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="打卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_water_attendance_attendance2_tv2"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="12:55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/water_attendance_hengxian1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_water_attendance_attendance2_tv3"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:text="2020/04/07  星期三"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_water_attendance_attendance2_tv4"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:text="广州市，天河区,珠江新城"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>


</LinearLayout>














