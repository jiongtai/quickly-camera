<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/camera_1_1_background"
    tools:background="@color/black">

    <LinearLayout
        android:id="@+id/visible1"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/construction1_real_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/d1"
        android:layout_gravity="center"
        android:background="#9d9d9d"
        android:layout_width="150dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/visible2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/construction1_real_tv2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020/04/07 星期三 11:59"
                android:textColor="@color/white"
                android:textSize="9sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/visible3"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="施工区域："
                android:textColor="@color/white"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/construction1_real_tv3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入区域名称"
                android:textColorHint="@color/white"
                android:enabled="false"
                android:textSize="9sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/d4"
            android:layout_gravity="center"
            android:background="#9d9d9d"
            android:layout_width="150dp"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_margin="@dimen/d4"
            android:id="@+id/visible4"
            android:layout_marginTop="@dimen/d1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="施工单位："
                android:textColor="@color/white"
                android:textSize="9sp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/construction1_real_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入施工单位"
                android:enabled="false"
                android:textColorHint="@color/white"
                android:textSize="9sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>














