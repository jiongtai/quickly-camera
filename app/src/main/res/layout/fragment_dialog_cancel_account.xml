<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <!--标题-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/d10"
        android:text="@string/cancel_tip"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:padding="@dimen/d10"
        android:text="@string/cancel_tip_content"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/text_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/cancel_account_agree"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50"
            android:layout_weight="1"
            android:background="@drawable/dialog_cancel_tip_linearlayout_left"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cancel_account_disAgree"
            android:layout_width="0dp"
            android:layout_height="@dimen/d50"
            android:layout_weight="1"
            android:background="@drawable/dialog_cancel_tip_linearlayout_right"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>