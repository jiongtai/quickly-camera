<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/camera_1_1_background"
    android:orientation="horizontal"
    android:padding="1dp">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/water_base_birthday" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/line_birty_day_1_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第 "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_base_birthday1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888"
                android:textSize="20sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 天"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_base_birthday2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-04-12"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_base_birthday3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="我在这里"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>


