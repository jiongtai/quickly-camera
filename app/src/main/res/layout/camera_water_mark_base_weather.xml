<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/camera_1_1_background"
    android:orientation="vertical"
    android:padding="@dimen/d10">

    <!-- 相机内心情水印 -->
    <LinearLayout
        android:id="@+id/water_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_water_weather"
                android:src="@drawable/water_base_weather"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_base_weather1"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="19sp"
                android:text="25°C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>




        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_base_weather2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-04-12"
            android:textColor="@color/white" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_base_weather3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="我在这里"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>
